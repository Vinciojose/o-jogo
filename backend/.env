# Configurações do BrasilSim Backend

# Porta do servidor
PORT=3003

# Configurações do banco de dados PostgreSQL
# Para desenvolvimento, vamos usar um banco simples em memória primeiro
# e depois migrar para PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brasilsim
DB_USER=brasilsim_user
DB_PASSWORD=brasilsim_pass

# Ambiente de desenvolvimento
NODE_ENV=development

# Configurações do jogo
INITIAL_INDICATORS_VALUE=50
MAX_INDICATOR_VALUE=100
MIN_INDICATOR_VALUE=0

# Configurações de decisões
DECISION_COOLDOWN_HOURS=24

